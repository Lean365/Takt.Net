{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Takt365": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/takt-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{MachineName}] [{ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Takt.Net"
    }
  },
  "dbConfigs": [
    {
      "Conn": "Server=localhost;Database=Takt_Identity_Dev;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
      "DbType": 1,
      "ConfigId": "0",
      "IsAutoCloseConnection": true
    },
    {
      "Conn": "Server=localhost;Database=Takt_Accounting_Dev;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
      "DbType": 1,
      "ConfigId": "1",
      "IsAutoCloseConnection": true
    },
    {
      "Conn": "Server=localhost;Database=Takt_HumanResource_Dev;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
      "DbType": 1,
      "ConfigId": "2",
      "IsAutoCloseConnection": true
    },
    {
      "Conn": "Server=localhost;Database=Takt_Logistics_Dev;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
      "DbType": 1,
      "ConfigId": "3",
      "IsAutoCloseConnection": true
    },
    {
      "Conn": "Server=localhost;Database=Takt_Building_Dev;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
      "DbType": 1,
      "ConfigId": "4",
      "IsAutoCloseConnection": true
    },
    {
      "Conn": "Server=localhost;Database=Takt_Routine_Dev;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
      "DbType": 1,
      "ConfigId": "5",
      "IsAutoCloseConnection": true
    }
  ],
  "OpenIddictDb": "Server=localhost;Database=Takt_Net_Oidc;User Id=sa;Password=yourpassword;TrustServerCertificate=true;",
  "Tenant": {
    "Enabled": false,
    "DefaultConfigId": "0",
    "ConfigIdHeaderName": "X-Config-Id",
    "ConfigIdQueryName": "configId"
  },
  "Init": {
    "InitDb": true,
    "SeedData": true
  },
  "SingleLogin": false,
  "ShowDbLog": false,
  "DemoMode": false,
  "Environment": "Development",
  "Logging": {
    "OperLog": true,
    "AopLog": true
  },
  "Snowflake": {
    "Enabled": true,
    "WorkId": 1
  },
  "PasswordPolicy": {
    "DefaultPassword": "123456"
  },
  "TaktExcelOptions": {
    "Author": "Takt365",
    "Title": "节拍数字工厂 ·Takt Digital Factory (TDF) ",
    "Subject": "数据导出",
    "Category": "数据报表",
    "Keywords": "Takt,数据导出,Excel",
    "Comments": "由节拍工厂系统自动生成",
    "Status": "完成",
    "Application": "节拍数字工厂 ·Takt Digital Factory (TDF) ",
    "Company": "Takt",
    "Manager": "Takt365"
  },
  "Security": {
    "RateLimit": {
      "MaxRequests": 1000,
      "TimeWindowSeconds": 60
    },
    "CsrfProtection": {
      "Enabled": true
    },
    "XssProtection": {
      "Enabled": true
    }
  },
  "Authentication": {
    "AccessTokenLifetimeHours": 2,
    "RefreshTokenLifetimeDays": 7,
    "RefreshTokenReuseLeewayMinutes": 5
  },
  "AccountLock": {
    "Enabled": true,
    "ErrorLimit": 5,
    "LockReason": "连续登录失败{ErrorCount}次，达到错误次数限制（{ErrorLimit}次）"
  }
}